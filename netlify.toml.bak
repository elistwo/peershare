[build]
  command = "npm run build"
  publish = ".next"
  environment = { NODE_VERSION = "18" }

[functions]
  directory = "functions"

[[redirects]]
  from = "/*"
  to = "/index.html"
  status = 200

# Para Next.js, también necesitamos manejar rutas no estáticas
[[headers]]
  for = "/api/*"
  [headers.values]
    X-Frame-Options = "DENY"
    X-Content-Type-Options = "nosniff"
    Referrer-Policy = "strict-origin-when-cross-origin"